CREATE OR REPLACE PACKAGE PKG_ADMIN_KIND_PERSON  IS
       FUNCTION GET_ID_KIND_PERSON(PNID_KIND_PERSON IN NUMBER)  RETURN NUMBER;
       FUNCTION GET_ID_PERSON(PNID_KIND_PERSON IN NUMBER)  RETURN NUMBER;
       FUNCTION GET_TITLE_PERSON(PNID_KIND_PERSON IN NUMBER)  RETURN VARCHAR2;
       PROCEDURE PROC_INSERT_KIND_PERSON(ID_KIND_PERSON NUMBER,ID_PERSON NUMBER,TITLE_PERSON VARCHAR2);
       PROCEDURE SET_ID_KIND_PERSON(NEW_VALUE NUMBER, OLD_VALUE NUMBER);
       PROCEDURE SET_ID_PERSON(NEW_VALUE NUMBER, OLD_VALUE NUMBER);
       PROCEDURE SET_TITLE_PERSON(NEW_VALUE VARCHAR2, OLD_VALUE VARCHAR2);
END PKG_ADMIN_KIND_PERSON;

CREATE OR REPLACE PACKAGE BODY PKG_ADMIN_KIND_PERSON IS
        --FUNCTION GET_ID_KIND_PERSON IMPLEMENTATION
        FUNCTION GET_ID_KIND_PERSON(PNID_KIND_PERSON IN NUMBER)  RETURN NUMBER
         IS
                  VNID_KIND_PERSON                      NUMBER(10);
         BEGIN
                  SELECT ID_KIND_PERSON
                  INTO VNID_KIND_PERSON
                  FROM KIND_PERSON
                  WHERE ID_KIND_PERSON=PNID_KIND_PERSON;
                  RETURN (VNID_KIND_PERSON);
         END;

        -------------------------------------------------------------------------------
        --FUNCTION GET_ID_PERSON IMPLEMENTATION
        FUNCTION GET_ID_PERSON(PNID_KIND_PERSON IN NUMBER)  RETURN NUMBER
         IS
                  VNID_PERSON                    NUMBER(10);
         BEGIN
                  SELECT ID_PERSON
                  INTO VNID_PERSON
                  FROM KIND_PERSON
                  WHERE ID_KIND_PERSON=PNID_KIND_PERSON;
                  RETURN (VNID_PERSON);
         END;

        -------------------------------------------------------------------------------
        --FUNCTION GET_TITLE_PERSON IMPLEMENTATION
        FUNCTION GET_TITLE_PERSON(PNID_KIND_PERSON IN NUMBER) RETURN VARCHAR2
        IS
                 VNTITLE_PERSON VARCHAR(20);

        BEGIN
                  SELECT TITLE_PERSON
                  INTO VNTITLE_PERSON
                  FROM KIND_PERSON
                  WHERE ID_KIND_PERSON=PNID_KIND_PERSON;
                  RETURN (VNTITLE_PERSON);
        END;

        PROCEDURE PROC_INSERT_KIND_PERSON(ID_KIND_PERSON NUMBER,ID_PERSON NUMBER,TITLE_PERSON VARCHAR2) IS
         
           BEGIN
             INSERT INTO KIND_PERSON(ID_KIND_PERSON,ID_PERSON,TITLE_PERSON)
             VALUES (ID_KIND_PERSON,ID_PERSON,TITLE_PERSON);
             
           END PROC_INSERT_KIND_PERSON;
           
           
        ---------------------------------------------------------------------------------
    PROCEDURE SET_ID_KIND_PERSON(NEW_VALUE NUMBER, OLD_VALUE NUMBER) IS
         BEGIN
             UPDATE KIND_PERSON SET ID_KIND_PERSON= NEW_VALUE WHERE ID_KIND_PERSON=OLD_VALUE;             
         END SET_ID_KIND_PERSON;
         
         
         ---------------------------------------------------------------------------------
    PROCEDURE SET_ID_PERSON(NEW_VALUE NUMBER, OLD_VALUE NUMBER) IS
         BEGIN
             UPDATE KIND_PERSON SET ID_PERSON= NEW_VALUE WHERE ID_PERSON=OLD_VALUE;             
         END SET_ID_PERSON;
         
         
         ---------------------------------------------------------------------------------
    PROCEDURE SET_TITLE_PERSON(NEW_VALUE VARCHAR2, OLD_VALUE VARCHAR2) IS
         BEGIN
            UPDATE KIND_PERSON SET TITLE_PERSON= NEW_VALUE WHERE TITLE_PERSON=OLD_VALUE;           
         END SET_TITLE_PERSON;
         
         
END PKG_ADMIN_KIND_PERSON;
